<Window x:Class="BspZipGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:BspZipGUI"
        mc:Ignorable="d"
        Title="Moltard's BspZipGUI" Height="570" Width="930" Icon="icon.ico"
        MinHeight="570" MinWidth="930">

    <Window.Resources>

        <!--#region Strings-->

        <!--#region Strings - Titles-->

        <sys:String x:Key="TextTitleBspPacker">Bsp Packer</sys:String>
        <sys:String x:Key="TextTitleMultiPackerBsp">Bsp Packer - Multiple</sys:String>
        <sys:String x:Key="TextTitleRepackBsp">Bsp Repack</sys:String>
        <sys:String x:Key="TextTitleExtractBsp">Bsp Extract</sys:String>
        <sys:String x:Key="TextTitleCubemapsBsp">Bsp Cubemaps</sys:String>
        <sys:String x:Key="TextTitleLogs">Logs</sys:String>
        <sys:String x:Key="TextTitleSettings">Settings</sys:String>

        <!--#endregion-->

        <!--#region Strings - Generic-->

        <sys:String x:Key="TextLabelBrowseButton">Browse</sys:String>
        <sys:String x:Key="TextLabelGame">Game</sys:String>
        <sys:String x:Key="TextLabelCustomFolder">Custom Folder</sys:String>
        <sys:String x:Key="TextLabelMultiCustomFolder">Custom Folders</sys:String>
        <sys:String x:Key="TextLabelBspFile">Bsp File</sys:String>

        <!--#endregion-->

        <!--#region Strings - Bsp Packer-->

        <sys:String x:Key="TextDescriptionPackBsp">Pack a custom folder into a BSP</sys:String>
        
        <sys:String x:Key="TextLabelButtonPackBsp">Pack Bsp</sys:String>

        <TextBlock x:Key="TextBlockDescriptionPackBsp" Style="{StaticResource PageDescription}">
            Pack a custom folder into a BSP
        </TextBlock>
        
        <sys:String x:Key="TextLabelUseDirWhitelist">Use Directory Whitelist</sys:String>
        <sys:String x:Key="TextTooltipUseDirWhitelist">Only pack defined folders and files (Settings)</sys:String>

        <sys:String x:Key="TextLabelOutputToNewBsp">Output to a new Bsp</sys:String>
        <sys:String x:Key="TextTooltipOutputToNewBsp">Pack the files into a new Bsp</sys:String>


        <TextBlock x:Key="TextBlockDescriptionMultiPackBsp" Style="{StaticResource PageDescription}">
            Pack multiple custom folders into a BSP
        </TextBlock>
        


        <!--#endregion-->

        <!--#region Strings - Bsp Repack-->

        <TextBlock x:Key="TextBlockDescriptionRepackBsp" Style="{StaticResource PageDescription}">
            Repack the BSP to compress it (or decompress it)<LineBreak/>
            Compressing may take several seconds depending of the size of the BSP<LineBreak/>
            /!\ Warning: Not available for every game (e.g. CS:GO)
        </TextBlock>

        <sys:String x:Key="TextLabelButtonCompress">Compress Bsp</sys:String>
        <sys:String x:Key="TextLabelButtonDecompress">Decompress Bsp</sys:String>

        <!--#endregion-->

        <!--#region Strings - Bsp Extract-->

        <TextBlock x:Key="TextBlockDescriptionExtractBsp" Style="{StaticResource PageDescription}">
            Extract the content of the BSP into a directory or into a .zip file<LineBreak/>
            /!\ Warning: Using it on a repacked BSP will not work
        </TextBlock>

        <sys:String x:Key="TextLabelButtonExtractBspFolder">Extract to Directory</sys:String>
        <sys:String x:Key="TextLabelButtonExtractBspZip">Extract to zip</sys:String>

        <!--#endregion-->

        <!--#region Strings - Bsp Cubemaps-->

        <TextBlock x:Key="TextBlockDescriptionCubemapsBsp" Style="{StaticResource PageDescription}">
            Extract cubemaps of the BSP into a directory or delete all cubemaps<LineBreak/>
            /!\ Warning: Deleting cubemaps will actually delete every VTF packed in the map
        </TextBlock>

        <sys:String x:Key="TextLabelButtonCubemapsBspExtract">Extract cubemaps</sys:String>
        <sys:String x:Key="TextLabelButtonCubemapsBspDelete">Delete cubemaps</sys:String>

        <!--#endregion-->


        <!--#region Strings - Settings-->

        <sys:String x:Key="TextHeaderDirWhitelist">Directories Whitelist</sys:String>
        <sys:String x:Key="TextHeaderCustomFolders">Custom Folders</sys:String>
        <sys:String x:Key="TextHeaderMultiCustomFolders">Custom Folders - Multiple</sys:String>

        <sys:String x:Key="TextHeaderGames">Games</sys:String>

        <sys:String x:Key="TextLabelName">Name</sys:String>
        <sys:String x:Key="TextLabelButtonAdd">Add...</sys:String>
        <sys:String x:Key="TextLabelButtonAddDirectory">Add Directory</sys:String>
        <sys:String x:Key="TextLabelButtonRemoveDirectory">Remove Selected</sys:String>
        <sys:String x:Key="TextLabelButtonDelete">Delete</sys:String>
        <sys:String x:Key="TextLabelButtonSetupGames">Setup Games</sys:String>
        <sys:String x:Key="TextLabelButtonSetupCustomFolder">Setup Custom Folders</sys:String>
        <sys:String x:Key="TextLabelButtonSetupMultiCustomFolder">Setup Multiple Custom Folders</sys:String>
        <sys:String x:Key="TextLabelButtonSaveSettings">Save Settings</sys:String>

        <sys:String x:Key="TextLabelGameBspzipPath">Bspzip Path</sys:String>
        <sys:String x:Key="TextLabelGameGameinfoPath">Gameinfo Path</sys:String>

        <sys:String x:Key="TextLabelDirectoryPath">Directory Path</sys:String>
        <sys:String x:Key="TextLabelDirectoriesPath">Directories</sys:String>
        <sys:String x:Key="TextLabelDirectoryName">Directory Name</sys:String>
        <sys:String x:Key="TextLabelAllowedExtensions">Allowed Extensions</sys:String>
        <sys:String x:Key="TextTooltipAllowedExtensions">Separate extensions by '|'. For example: .vmt|.vtf</sys:String>

        <!--#endregion-->

        <!--#endregion-->

        <!--#region DataTemplate-->

        <DataTemplate x:Key="ToolGamesListTemplate">
            <TextBlock Text="{Binding Path=Name}"/>
        </DataTemplate>
        <DataTemplate x:Key="ToolCustomFoldersListTemplate">
            <TextBlock Text="{Binding Path=Name}"/>
        </DataTemplate>
        <DataTemplate x:Key="ToolMultiCustomFoldersListTemplate">
            <TextBlock Text="{Binding Path=Name}"/>
        </DataTemplate>
        <DataTemplate x:Key="ToolDirectoryWhitelistTemplate">
            <TextBlock Text="{Binding Path=DirectoryName}"/>
        </DataTemplate>


        <DataTemplate x:Key="ToolSettingsMultiCustomFolderTemplateBox">
            <TextBlock Text="{Binding}"/>
        </DataTemplate>

        <!--#endregion-->

    </Window.Resources>

    <Border Style="{StaticResource ToolMainBorderStyle}">


        <TabControl Name="MainTabControl" Style="{StaticResource ToolMainTabStyle}">

            <TabItem Name="BspPackerTab">
                <TabItem.Header>
                    <TextBlock Text="{StaticResource TextTitleBspPacker}"/>
                </TabItem.Header>

                <DockPanel>
                    <StackPanel DockPanel.Dock="Top">
                        <TextBlock Style="{StaticResource PageTitle}" Text="{StaticResource TextTitleBspPacker}"/>
                        <!--<TextBlock Style="{StaticResource PageDescription}" Text="{StaticResource TextDescriptionPackBsp}"/>-->
                        <ContentControl Content="{StaticResource TextBlockDescriptionPackBsp}"/>
                        <ContentControl Content="{StaticResource ToolSeparator}"/>
                    </StackPanel>

                    <StackPanel>
                        <Grid Margin="{StaticResource MarginNewElements}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                                <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                                <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelGame}" />
                            <ComboBox Grid.Column="1" Style="{StaticResource ToolOptionComboBox}" Name="PackBspGameComboBox" SelectionChanged="PackBspGameComboBox_SelectionChanged" 
                                     ItemsSource="{Binding}" ItemTemplate="{StaticResource ToolGamesListTemplate}" />

                            <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="GameLinkButton" Click="GameLinkButton_Click">
                                <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonSetupGames}"/>
                            </Button>
                        </Grid>

                        <Grid Margin="{StaticResource MarginNewElements}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                                <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                                <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelCustomFolder}" />
                            <StackPanel Grid.Column="1">
                                <ComboBox Style="{StaticResource ToolOptionComboBox}" Name="PackBspCustomFolderComboBox" 
                                          SelectionChanged="PackBspCustomFolderComboBox_SelectionChanged" 
                                          ItemsSource="{Binding}" ItemTemplate="{StaticResource ToolCustomFoldersListTemplate}" />
                                <TextBox Name="PackBspCustomFolderPath" Opacity="0.4" Style="{StaticResource ToolOptionTextBox}" 
                                         Text="{Binding Path, Mode=OneWay}" IsReadOnly="True" />
                            </StackPanel>

                            <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="CustomFolderLinkButton" Click="CustomFolderLinkButton_Click">
                                <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonSetupCustomFolder}"/>
                            </Button>
                        </Grid>

                        <Grid Margin="{StaticResource MarginNewElements}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                                <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                                <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelBspFile}" />
                            <TextBox Grid.Column="1" Style="{StaticResource ToolOptionTextBox}" Name="PackBspFileTextBox" TextChanged="PackBspFileTextBox_TextChanged"
                                     PreviewDragOver="DragOverTextBoxFix" PreviewDragEnter="DragOverTextBoxFix" PreviewDrop="PackBspFileTextBox_Drop" />

                            <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="BspFileBrowseButton" Click="PackBspFileBrowseButton_Click" >
                                <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelBrowseButton}"/>
                            </Button>
                        </Grid>

                        <Grid Margin="{StaticResource MarginNewElements}">
                            <CheckBox Name="PackBspWhitelistCheckbox" HorizontalAlignment="Center" IsChecked="True" 
                                      ToolTip="{StaticResource TextTooltipUseDirWhitelist}" Content="{StaticResource TextLabelUseDirWhitelist}" />
                        </Grid>

                        <Grid Margin="{StaticResource MarginNewElements}">
                            <CheckBox Name="PackBspOutputToNewBspCheckbox" HorizontalAlignment="Center" IsChecked="False" 
                                      ToolTip="{StaticResource TextTooltipOutputToNewBsp}" Content="{StaticResource TextLabelOutputToNewBsp}" />
                        </Grid>

                        <Grid Margin="{StaticResource MarginNewElements}">
                            <Button Style="{StaticResource ToolExecuteButton}" Name="PackBspButton" IsEnabled="False" Click="PackBspButton_Click" >
                                <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonPackBsp}"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                </DockPanel>
            </TabItem>

            <TabItem Name="MultiPackerBspTab">
                <TabItem.Header>
                    <TextBlock Text="{StaticResource TextTitleMultiPackerBsp}"/>
                </TabItem.Header>

                <DockPanel>
                    <StackPanel DockPanel.Dock="Top">
                        <TextBlock Style="{StaticResource PageTitle}" Text="{StaticResource TextTitleMultiPackerBsp}"/>
                        <!--<TextBlock Style="{StaticResource PageDescription}" Text="{StaticResource TextDescriptionMultiPackBsp}"/>-->
                        <ContentControl Content="{StaticResource TextBlockDescriptionMultiPackBsp}"/>
                        <ContentControl Content="{StaticResource ToolSeparator}"/>
                    </StackPanel>

                    <StackPanel>
                        <Grid Margin="{StaticResource MarginNewElements}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                                <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                                <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelGame}" />
                            <ComboBox Grid.Column="1" Style="{StaticResource ToolOptionComboBox}" Name="MultiPackBspGameComboBox" SelectionChanged="MultiPackGameComboBox_SelectionChanged" 
                                     ItemsSource="{Binding}" ItemTemplate="{StaticResource ToolGamesListTemplate}" />

                            <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="MultiGameLinkButton" Click="GameLinkButton_Click">
                                <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonSetupGames}"/>
                            </Button>
                        </Grid>

                        <Grid Margin="{StaticResource MarginNewElements}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                                <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                                <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelMultiCustomFolder}" />
                            <StackPanel Grid.Column="1">
                                <ComboBox Style="{StaticResource ToolOptionComboBox}" Name="MultiPackBspCustomFolderComboBox" 
                                          SelectionChanged="MultiPackCustomFolderComboBox_SelectionChanged" 
                                          ItemsSource="{Binding}" ItemTemplate="{StaticResource ToolMultiCustomFoldersListTemplate}" />
                                <TextBox Name="MultiPackBspCustomFolderPath" Opacity="0.4" Style="{StaticResource ToolOptionTextBox}" Height="100"
                                         Text="{Binding Path, Mode=OneWay}" IsReadOnly="True" VerticalScrollBarVisibility="Auto" />
                            </StackPanel>

                            <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="MultiCustomFolderLinkButton" Click="MultiCustomFolderLinkButton_Click">
                                <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonSetupMultiCustomFolder}"/>
                            </Button>
                        </Grid>

                        <Grid Margin="{StaticResource MarginNewElements}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                                <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                                <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelBspFile}" />
                            <TextBox Grid.Column="1" Style="{StaticResource ToolOptionTextBox}" Name="MultiPackBspFileTextBox" TextChanged="MultiPackBspFileTextBox_TextChanged"
                                     PreviewDragOver="DragOverTextBoxFix" PreviewDragEnter="DragOverTextBoxFix" PreviewDrop="MultiPackBspFileTextBox_Drop" />

                            <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="MultiBspFileBrowseButton" Click="MultiPackBspFileBrowseButton_Click" >
                                <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelBrowseButton}"/>
                            </Button>
                        </Grid>

                        <Grid Margin="{StaticResource MarginNewElements}">
                            <CheckBox Name="MultiPackBspWhitelistCheckbox" HorizontalAlignment="Center" IsChecked="True" 
                                      ToolTip="{StaticResource TextTooltipUseDirWhitelist}" Content="{StaticResource TextLabelUseDirWhitelist}" />
                        </Grid>

                        <Grid Margin="{StaticResource MarginNewElements}">
                            <CheckBox Name="MultiPackBspOutputToNewBspCheckbox" HorizontalAlignment="Center" IsChecked="False" 
                                      ToolTip="{StaticResource TextTooltipOutputToNewBsp}" Content="{StaticResource TextLabelOutputToNewBsp}" />
                        </Grid>

                        <Grid Margin="{StaticResource MarginNewElements}">
                            <Button Style="{StaticResource ToolExecuteButton}" Name="MultiPackBspButton" IsEnabled="False" Click="MultiPackBspButton_Click" >
                                <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonPackBsp}"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                </DockPanel>
            </TabItem>


            <TabItem Name="RepackBspTab">
                <TabItem.Header>
                    <TextBlock Text="{StaticResource TextTitleRepackBsp}"/>
                </TabItem.Header>

                <StackPanel>
                    <TextBlock Style="{StaticResource PageTitle}" Text="{StaticResource TextTitleRepackBsp}" />
                    <ContentControl Content="{StaticResource TextBlockDescriptionRepackBsp}"/>
                    <ContentControl Content="{StaticResource ToolSeparator}"/>

                    <Grid Margin="{StaticResource MarginNewElements}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelGame}" />
                        <ComboBox Grid.Column="1" Style="{StaticResource ToolOptionComboBox}" Name="RepackBspGameComboBox" SelectionChanged="RepackGameComboBox_SelectionChanged" 
                                     ItemsSource="{Binding}" ItemTemplate="{StaticResource ToolGamesListTemplate}" />

                        <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="RepackGameLinkButton" Click="GameLinkButton_Click">
                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonSetupGames}"/>
                        </Button>
                    </Grid>

                    <Grid Margin="{StaticResource MarginNewElements}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelBspFile}" />
                        <TextBox Grid.Column="1" Style="{StaticResource ToolOptionTextBox}" Name="RepackBspFileTextBox" TextChanged="RepackBspFileTextBox_TextChanged"
                                     PreviewDragOver="DragOverTextBoxFix" PreviewDragEnter="DragOverTextBoxFix" PreviewDrop="RepackBspFileTextBox_Drop" />

                        <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="RepackBspFileBrowseButton" Click="RepackBspFileBrowseButton_Click" >
                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelBrowseButton}"/>
                        </Button>
                    </Grid>

                    <Grid Margin="{StaticResource MarginNewElements}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Style="{StaticResource GridColumnSize2}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize2}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize2}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize2}"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" Style="{StaticResource ToolExecuteButton}" Name="RepackBspCompressButton" IsEnabled="False" Click="RepackBspCompressButton_Click" >
                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonCompress}"/>
                        </Button>
                        <Button Grid.Column="2" Style="{StaticResource ToolExecuteButton}" Name="RepackBspDecompressButton" IsEnabled="False" Click="RepackBspDecompressButton_Click" >
                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonDecompress}"/>
                        </Button>
                    </Grid>

                </StackPanel>
            </TabItem>


            <TabItem Name="ExtractBspTab">
                <TabItem.Header>
                    <TextBlock Text="{StaticResource TextTitleExtractBsp}"/>
                </TabItem.Header>

                <StackPanel>
                    <TextBlock Style="{StaticResource PageTitle}" Text="{StaticResource TextTitleExtractBsp}" />
                    <ContentControl Content="{StaticResource TextBlockDescriptionExtractBsp}"/>
                    <ContentControl Content="{StaticResource ToolSeparator}"/>

                    <Grid Margin="{StaticResource MarginNewElements}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelGame}" />
                        <ComboBox Grid.Column="1" Style="{StaticResource ToolOptionComboBox}" Name="ExtractBspGameComboBox" SelectionChanged="ExtractBspGameComboBox_SelectionChanged" 
                                     ItemsSource="{Binding}" ItemTemplate="{StaticResource ToolGamesListTemplate}" />

                        <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="ExtractBspGameLinkButton" Click="GameLinkButton_Click">
                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonSetupGames}"/>
                        </Button>
                    </Grid>

                    <Grid Margin="{StaticResource MarginNewElements}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelBspFile}" />
                        <TextBox Grid.Column="1" Style="{StaticResource ToolOptionTextBox}" Name="ExtractBspFileTextBox" TextChanged="ExtractBspFileTextBox_TextChanged"
                                     PreviewDragOver="DragOverTextBoxFix" PreviewDragEnter="DragOverTextBoxFix" PreviewDrop="ExtractBspFileTextBox_Drop" />

                        <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="ExtractBspFileBrowseButton" Click="ExtractBspFileBrowseButton_Click" >
                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelBrowseButton}"/>
                        </Button>
                    </Grid>

                    <Grid Margin="{StaticResource MarginNewElements}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelDirectoryPath}" />
                        <TextBox Grid.Column="1" Style="{StaticResource ToolOptionTextBox}" Name="ExtractBspFolderTextBox" TextChanged="ExtractBspFolderTextBox_TextChanged"
                                     PreviewDragOver="DragOverTextBoxFix" PreviewDragEnter="DragOverTextBoxFix" PreviewDrop="ExtractBspFolderTextBox_Drop" />

                        <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="ExtractBspFolderBrowseButton" Click="ExtractBspFolderBrowseButton_Click" >
                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelBrowseButton}"/>
                        </Button>
                    </Grid>


                    <Grid Margin="{StaticResource MarginNewElements}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Style="{StaticResource GridColumnSize2}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize2}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize2}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize2}"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" Style="{StaticResource ToolExecuteButton}" Name="ExtractBspDirectoryButton" IsEnabled="False" Click="ExtractBspDirectoryButton_Click" >
                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonExtractBspFolder}"/>
                        </Button>
                        <Button Grid.Column="2" Style="{StaticResource ToolExecuteButton}" Name="ExtractBspZipButton" IsEnabled="False" Click="ExtractBspZipButton_Click" >
                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonExtractBspZip}"/>
                        </Button>
                    </Grid>

                </StackPanel>
            </TabItem>


            <TabItem Name="CubemapsBspTab">
                <TabItem.Header>
                    <TextBlock Text="{StaticResource TextTitleCubemapsBsp}"/>
                </TabItem.Header>

                <StackPanel>
                    <TextBlock Style="{StaticResource PageTitle}" Text="{StaticResource TextTitleCubemapsBsp}" />
                    <ContentControl Content="{StaticResource TextBlockDescriptionCubemapsBsp}"/>
                    <ContentControl Content="{StaticResource ToolSeparator}"/>

                    <Grid Margin="{StaticResource MarginNewElements}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelGame}" />
                        <ComboBox Grid.Column="1" Style="{StaticResource ToolOptionComboBox}" Name="CubemapsBspGameComboBox" SelectionChanged="CubemapsBspGameComboBox_SelectionChanged" 
                                     ItemsSource="{Binding}" ItemTemplate="{StaticResource ToolGamesListTemplate}" />

                        <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="CubemapsBspGameLinkButton" Click="GameLinkButton_Click">
                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonSetupGames}"/>
                        </Button>
                    </Grid>

                    <Grid Margin="{StaticResource MarginNewElements}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelBspFile}" />
                        <TextBox Grid.Column="1" Style="{StaticResource ToolOptionTextBox}" Name="CubemapsBspFileTextBox" TextChanged="CubemapsBspFileTextBox_TextChanged"
                                     PreviewDragOver="DragOverTextBoxFix" PreviewDragEnter="DragOverTextBoxFix" PreviewDrop="CubemapsBspFileTextBox_Drop" />

                        <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="CubemapsBspFileBrowseButton" Click="CubemapsBspFileBrowseButton_Click" >
                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelBrowseButton}"/>
                        </Button>
                    </Grid>

                    <Grid Margin="{StaticResource MarginNewElements}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize5}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize1}"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource ToolOptionLabel}" Text="{StaticResource TextLabelDirectoryPath}" />
                        <TextBox Grid.Column="1" Style="{StaticResource ToolOptionTextBox}" Name="CubemapsBspFolderTextBox" TextChanged="CubemapsBspFolderTextBox_TextChanged"
                                     PreviewDragOver="DragOverTextBoxFix" PreviewDragEnter="DragOverTextBoxFix" PreviewDrop="CubemapsBspFolderTextBox_Drop" />

                        <Button Grid.Column="2" Style="{StaticResource ToolOptionButton}" Name="CubemapsBspFolderBrowseButton" Click="CubemapsBspFolderBrowseButton_Click" >
                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelBrowseButton}"/>
                        </Button>
                    </Grid>


                    <Grid Margin="{StaticResource MarginNewElements}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Style="{StaticResource GridColumnSize2}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize2}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize2}"/>
                            <ColumnDefinition Style="{StaticResource GridColumnSize2}"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" Style="{StaticResource ToolExecuteButton}" Name="CubemapsBspExtractButton" IsEnabled="False" Click="CubemapsBspExtractButton_Click" >
                            <TextBlock Style="{StaticResource ToolOptionButtonLabel}" Text="{StaticResource TextLabelButtonCubemapsBspExtract}"/>
                        </Button>
                        <Button Grid.Column="2" Style="{StaticResource ToolExecuteButton}" Name="CubemapsBspDeleteButton" IsEnabled="False" Click="CubemapsBspDeleteButton_Click" >
